<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ludoed">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ludoed">
        <activity
            android:name=".controller.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.MainActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <activity android:name=".controller.gameactivities.ColorationGameActivity" /> <!-- cette partie ermet de cacher la barre de navigation -->
        <activity
            android:name=".controller.GameActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".controller.ParameterActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".controller.gameactivities.CorrespondenceGameActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="fullSensor"/>
        <activity
            android:name=".controller.gameactivities.RotationGameActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="fullSensor"/>
        <activity
            android:name=".controller.SettingActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    >

    <TextView
        android:id="@+id/text_niveau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="136dp"
        android:drawableLeft="@drawable/ic_baseline_settings_24"
        android:drawablePadding="2dp"
        android:text="Niveau"
        android:textColor="@color/red"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/spinner1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_diff" />

    <TextView
        android:id="@+id/text_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="76dp"
        android:background="@color/material_on_primary_emphasis_high_type"
        android:drawableLeft="@drawable/ic_baseline_settings_24"
        android:drawablePadding="2dp"
        android:text="DifficultÃ©"
        android:textColor="@color/red"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_corresp" />

    <TextView
        android:id="@+id/text_coloriage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="268dp"
        android:background="#000000"
        android:text="Coloriage"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_rotation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <View
        android:id="@+id/dividerH"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.687"
        tools:layout_editor_absoluteX="157dp" />

    <View
        android:id="@+id/divider_V1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="416dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/divider_V2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/but_import_song"
        android:layout_width="262dp"
        android:layout_height="61dp"
        android:layout_marginBottom="48dp"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:text="Importer Musique"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/but_import_img_2"
        app:layout_constraintVertical_bias="0.82" />

    <View
        android:id="@+id/divider_V2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="404dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/text_corresp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:background="#000000"
        android:text="Correspondance"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_coloriage"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <TextView
        android:id="@+id/text_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:background="#000000"
        android:text="Rotation"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.181" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="68dp"
        android:numStars="3"
        android:progress="100"
        android:stepSize="1"
        android:progressTint="#ffff8800"
        app:layout_constraintEnd_toStartOf="@+id/ratingBar2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_diff"
        app:layout_constraintTop_toBottomOf="@+id/text_corresp" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="272dp"
        android:numStars="3"
        android:progress="80"
        android:progressTint="#ffff8800"
        android:stepSize="1"
        app:layout_constraintEnd_toStartOf="@+id/ratingBar3"
        app:layout_constraintTop_toBottomOf="@+id/text_coloriage" />

    <RatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="140dp"
        android:numStars="3"
        android:progress="40"
        android:progressTint="#ffff8800"
        android:secondaryProgressTint="#ffff8800"
        android:stepSize="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_rotation" />


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="248dp"
        android:background="@color/white"
        android:entries="@array/numbers"
        android:spinnerMode="dropdown"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/but_import_img_1"
        app:layout_constraintEnd_toStartOf="@+id/spinner3"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar1"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="180dp"
        android:background="@color/white"
        android:entries="@array/numbers"
        android:spinnerMode="dropdown"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar3" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="380dp"
        android:background="@color/white"
        android:entries="@array/numbers"
        android:spinnerMode="dropdown"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/spinner2"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar2" />

    <Button
        android:id="@+id/but_import_img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="216dp"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:text="Importer Image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/but_import_img_2"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_niveau"
        app:layout_constraintVertical_bias="0.019" />

    <Button
        android:id="@+id/but_import_img_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="236dp"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:text="Importer Image"
        app:layout_constraintEnd_toStartOf="@+id/but_import_img_3"
        app:layout_constraintTop_toBottomOf="@+id/spinner3" />

    <Button
        android:id="@+id/but_import_img_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="100dp"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:text="Importer Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2" />

    <ImageView
        android:id="@+id/iv_parametre"
        android:layout_width="183dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@android:drawable/ic_menu_manage" />


</androidx.constraintlayout.widget.ConstraintLayout>